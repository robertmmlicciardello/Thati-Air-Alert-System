{
  "name": "thati-alert-server",
  "version": "1.0.0",
  "description": "Thati Air Alert Server - Online Infrastructure",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "npm run test:unit && npm run test:integration && npm run test:security",
    "test:unit": "mocha tests/unit/**/*.test.js --require tests/setup.js --timeout 10000",
    "test:integration": "mocha tests/integration/**/*.test.js --require tests/setup.js --timeout 15000",
    "test:security": "mocha tests/security/**/*.test.js --require tests/setup.js --timeout 10000",
    "test:performance": "mocha tests/performance/**/*.test.js --require tests/setup.js --timeout 30000",
    "test:watch": "mocha tests/**/*.test.js --require tests/setup.js --watch",
    "test:coverage": "nyc npm run test",
    "build": "npm run test && npm run start",
    "migrate": "node src/database/migrate.js",
    "seed": "node src/database/seed.js",
    "lint": "eslint src/ tests/",
    "lint:fix": "eslint src/ tests/ --fix"
  },
  "keywords": [
    "alert",
    "emergency",
    "myanmar",
    "offline",
    "mesh"
  ],
  "author": "Thati Alert Team",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.0",
    "bcrypt": "^5.1.1",
    "bcryptjs": "^2.4.3",
    "bull": "^4.11.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.10.0",
    "express-slow-down": "^1.6.0",
    "express-validator": "^7.0.1",
    "firebase-admin": "^13.4.0",
    "helmet": "^7.0.0",
    "ioredis": "^5.3.2",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "moment": "^2.29.4",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "node-cache": "^5.1.2",
    "node-cron": "^3.0.2",
    "nodemailer": "^6.9.4",
    "pg": "^8.11.3",
    "pg-pool": "^3.6.1",
    "redis": "^4.6.8",
    "sharp": "^0.32.6",
    "socket.io": "^4.7.2",
    "sqlite3": "^5.1.6",
    "twilio": "^4.15.0",
    "uuid": "^9.0.0",
    "winston": "^3.10.0"
  },
  "devDependencies": {
    "autocannon": "^7.12.0",
    "chai": "^4.3.8",
    "eslint": "^8.46.0",
    "jest": "^29.6.2",
    "mocha": "^10.2.0",
    "nodemon": "^3.0.1",
    "nyc": "^15.1.0",
    "proxyquire": "^2.1.3",
    "sinon": "^15.2.0",
    "supertest": "^6.3.3",
    "ws": "^8.13.0"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}
