{
  "name": "thati-alert-server",
  "version": "1.0.0",
  "description": "Thati Air Alert Server - Online Infrastructure",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "npm run test:unit && npm run test:integration && npm run test:security",
    "test:unit": "mocha tests/unit/**/*.test.js --require tests/setup.js --timeout 10000",
    "test:integration": "mocha tests/integration/**/*.test.js --require tests/setup.js --timeout 15000",
    "test:security": "mocha tests/security/**/*.test.js --require tests/setup.js --timeout 10000",
    "test:performance": "mocha tests/performance/**/*.test.js --require tests/setup.js --timeout 30000",
    "test:watch": "mocha tests/**/*.test.js --require tests/setup.js --watch",
    "test:coverage": "nyc npm run test",
    "build": "npm run test && npm run start",
    "migrate": "node src/database/migrate.js",
    "seed": "node src/database/seed.js",
    "lint": "eslint src/ tests/",
    "lint:fix": "eslint src/ tests/ --fix"
  },
  "keywords": ["alert", "emergency", "myanmar", "offline", "mesh"],
  "author": "Thati Alert Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "socket.io": "^4.7.2",
    "pg": "^8.11.3",
    "redis": "^4.6.8",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "express-rate-limit": "^6.10.0",
    "express-validator": "^7.0.1",
    "winston": "^3.10.0",
    "dotenv": "^16.3.1",
    "bull": "^4.11.3",
    "node-cron": "^3.0.2",
    "firebase-admin": "^11.10.1",
    "twilio": "^4.15.0",
    "nodemailer": "^6.9.4",
    "crypto": "^1.0.1",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.6.2",
    "mocha": "^10.2.0",
    "chai": "^4.3.8",
    "sinon": "^15.2.0",
    "proxyquire": "^2.1.3",
    "supertest": "^6.3.3",
    "autocannon": "^7.12.0",
    "nyc": "^15.1.0",
    "ws": "^8.13.0",
    "eslint": "^8.46.0"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}